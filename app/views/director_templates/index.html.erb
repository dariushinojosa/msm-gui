<h1>
  List of all directors
</h1>

<form action="/insert_director" method="post">
  <div>
    <label for="name_field">Name</label>
    <input id="name_field" type="text" name="the_name">
  </div>

  <div>
    <label for="year_field">Year</label>
    <input id="year_field" type="text" name="the_year">
  </div>

  <div>
    <label for="duration_field">Duration</label>
    <input id="duration_field" type="text" name="the_duration">
  </div>

  <div>
    <label for="desc_field">Description</label>
    <input id="desc_field" type="text" name="the_desc">
  </div>

  <div>
    <label for="image_field">Image</label>
    <input id="image_field" type="text" name="the_image">
  </div>

  <div>
    <label for="director_field">Director ID</label>
    <input id="director_field" type="text" name="the_director">
  </div>

  <button>Create movie</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
